<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
    <link rel="stylesheet" href="/css/index.css">
    <title>Home Page</title>

</head>
@model IEnumerable<Result>

<body>
    <div class="wrapper container-fluid">
        <partial name="NavbarPartial"></partial>

        <div class="filterButtons btn-group" role="group">
            <a href="/" type="button" class="btn btn-secondary">Top Rated</a>
            <a href="/upcoming" type="button" class="btn btn-outline-secondary">Upcoming</a>
            <button type="button" class="btn btn-outline-secondary">Genre</button>
        </div>

        <div class="mainGroup d-flex flex-wrap justify-content-md-between justify-content-center">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                @foreach (var r in Model)
                {
                    <div class="col-sm-6 col-md-3">
                        <div class="card">
                            <a href="/movie/@r.id">
                                <img src="https://image.tmdb.org/t/p/w500/@r.poster_path" class="card-img-top" alt="poster">
                            </a>
                            <div class="cardBody card-body d-flex">
                                <div class="title mb-1 mr-4 card-title">@r.title</div>
                                <span class="rating card-text">@r.vote_average </span>
                            </div>
                            <a class="watchList btn btn-outline-danger" href="/watch/@r.id">Add to Watch List</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

